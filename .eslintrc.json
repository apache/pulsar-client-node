{
  "extends": ["airbnb-base","plugin:jest/recommended"],
  "rules": {
    "class-methods-use-this": "warn",
    "no-await-in-loop": "warn",
    "no-console": "off",
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["tests/*.js"],
      "rules": {
        "no-await-in-loop": "off"
      }
    }
  ],
  "globals": {
    "describe": true,
    "test": true,
    "expect": true
  }
}
